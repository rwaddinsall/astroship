---
import { SEO } from 'astro-seo';
import '@fontsource-variable/inter/index.css';
import '@fontsource-variable/bricolage-grotesque';
import Nav from '@components/navbar/navbar.astro';


export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  '/opengraph.jpg',
  Astro.site,
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + ' | ' + 'Hopkins Creek Festival 2025'
  : 'Hopkins Creek Festival 2025';
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description='Hopkins Creek Festival 2025'
      canonical={canonicalURL}
      twitter={{
        creator: '@hopkinscreek',
        site: '@hopkinscreek',
        card: 'summary_large_image',
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: 'website',
          title: `Hopkins Creek Festival 2025`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: 'Hopkins Creek Festival 2025 Homepage Screenshot',
        },
      }}
    />
  </head>
  <!-- Main content -->
  <body>
<Nav />
    <slot>

    </slot>
  </body>
</html>

<style is:global>
  /* Improve Page speed */
  /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
  img {
    content-visibility: auto;
  }

  body {
    background-color: '#fef6e4';
  }

</style>